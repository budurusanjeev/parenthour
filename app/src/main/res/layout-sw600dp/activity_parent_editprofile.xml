<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/par_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_upload_profile_photo"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_profilelogo" />

                <ImageView
                    android:id="@+id/iv_add_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_upload_profile_photo"
                    android:layout_alignEnd="@+id/iv_upload_profile_photo"
                    android:layout_alignRight="@+id/iv_upload_profile_photo"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/imagedescription"
                    android:src="@drawable/ic_add_pro" />
            </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_round_address_popup"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/imagedescription"
                android:padding="10dp"
                android:src="@drawable/ic_name" />

            <View
                android:id="@+id/view_person"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_color" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:gravity="start|center"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:textColor="@color/gray_color"
                android:textColorHint="@color/gray_color"
                android:textSize="@dimen/activity_medium_textSize" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zipcode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagezipcodedescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_zipcode" />

                <View
                    android:id="@+id/view_zipcode"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_zipcode"
                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/zipcode"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_medium_textSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imageemaildescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_email" />

                <View
                    android:id="@+id/view_email"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_email"
                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="start|center"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/activity_medium_textSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_mobileno" />

                <View
                    android:id="@+id/view_phone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:enabled="false"
                    android:gravity="start|center"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/imagedescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_age" />

                <View
                    android:id="@+id/view_age"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_age"
                android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_medium_textSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_occ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_occupation"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:contentDescription="@string/imagedescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_occupation" />

                <View
                    android:id="@+id/view_occ"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_occupation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/occupation"
                    android:inputType="textCapWords"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_medium_textSize" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imageeducationdescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_education" />

                <View
                    android:id="@+id/view_edu"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_education"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="start|center"
                    android:hint="@string/education"
                    android:inputType="textCapWords"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/gender"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                        android:button="@drawable/custom_radio_button"
                        android:padding="10dp"
                        android:text="@string/male"
                        android:textColor="@color/App_black"
                        android:textSize="@dimen/activity_medium_textSize" />

                    <RadioButton
                        android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/custom_radio_button"
                        android:padding="10dp"
                        android:text="@string/female"
                        android:textColor="@color/App_black"
                        android:textSize="@dimen/activity_medium_textSize" />
                </RadioGroup>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/ethnicity"
                android:textColor="@color/App_Gray"
                android:textSize="@dimen/activity_medium_textSize" />

            <LinearLayout
                android:id="@+id/ll_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/edt_cnfrmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"
                    android:background="@color/transparent"
                    android:gravity="start"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/activity_medium_textSize" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/imagedescription"
                    android:padding="5dp"
                    android:src="@drawable/ic_originicon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avail_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_avail_Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/available_day"
                android:textColor="@color/App_Gray"
                android:textSize="@dimen/activity_medium_textSize" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_weekdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:button="@drawable/custom_checkbox_design"
                    android:padding="15dp"
                    android:text="@string/weekdays"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_weekends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:button="@drawable/custom_checkbox_design"
                    android:padding="10dp"
                    android:text="@string/weekends"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_avail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/available_time"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_morning"
                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="15dp"
                        android:text="@string/morning"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:button="@drawable/custom_checkbox_design"
                    android:padding="15dp"
                    android:text="@string/afternoon"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_evening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:button="@drawable/custom_checkbox_design"
                    android:padding="15dp"
                    android:text="@string/evening"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />

            </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edt_login_buttons"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_medium_textSize" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edt_login_buttons"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_medium_textSize" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>