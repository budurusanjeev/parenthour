<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/small_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <EditText
        android:id="@+id/edt_verify_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_round_gray"
        android:hint="Enter OTP"
        android:inputType="textEmailAddress"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verify_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/edt_login_buttons"
            android:gravity="center"
            android:padding="5dp"
            android:text="Verify"
            android:textColor="@color/White"
            android:textSize="@dimen/activity_medium_textSize" />

        <TextView
            android:id="@+id/tv_verify_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/edt_login_buttons"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel"
            android:textColor="@color/White"
            android:textSize="@dimen/activity_medium_textSize" />

    </LinearLayout>

    <TextView
        android:id="@+id/receive_pwd_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Didn't Receive OTP, Send again."
        android:textColor="@color/Orange"
        android:textSize="@dimen/activity_medium_textSize" />
</LinearLayout>