<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/app_toolbar_layout" />
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/imagestatedescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_age" />

                <View
                    android:id="@+id/view_age"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:gravity="start|center_vertical"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_extralarge_textSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_occ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagestatedescription"
                    android:padding="10dp"
                    android:src="@drawable/ic_occupation" />

                <View
                    android:id="@+id/view_occ"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/gray_color" />

                <EditText
                    android:id="@+id/edt_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:gravity="start|center_vertical"
                    android:hint="@string/occupation"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_extralarge_textSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/genders"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_extralarge_textSize" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/custom_radio_button"
                        android:padding="10dp"
                        android:text="@string/male"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/custom_radio_button"
                        android:padding="10dp"
                        android:text="@string/female"
                        android:textColor="@color/gray_color"
                        android:textSize="@dimen/activity_extralarge_textSize" />
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagestatedescription"
                    android:padding="15dp"
                    android:src="@drawable/ic_education" />
                <View
                    android:id="@+id/view_edu"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />
                <EditText
                    android:id="@+id/edt_education"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:gravity="start|center_vertical"
                    android:hint="@string/education"
                    android:inputType="textCapWords"
                    android:textColor="@color/gray_color"
                    android:textColorHint="@color/gray_color"
                    android:textSize="@dimen/activity_extralarge_textSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/ethnicity"
                android:textColor="@color/App_Gray"
                android:textSize="@dimen/activity_extralarge_textSize" />

            <LinearLayout
                android:id="@+id/ll_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/edittext_round_address_popup"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/edt_cnfrmpwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:background="@color/transparent"
                    android:gravity="start"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/activity_medium_textSize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/ethnicity"
                    android:padding="10dp"
                    android:src="@drawable/ic_originicon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avail_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_avail_Day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_day"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb_weekdays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="15dp"
                        android:text="@string/weekdays"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb_weekends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="15dp"
                        android:text="@string/weekends"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_avail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_avail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_time"
                    android:textColor="@color/App_Gray"
                    android:textSize="@dimen/activity_medium_textSize" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="10dp"
                        android:text="@string/morning"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb_afternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="10dp"
                        android:text="@string/afternoon"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/cb_evening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:button="@drawable/custom_checkbox_design"
                        android:padding="10dp"
                        android:text="@string/evening"
                        android:textColor="@color/App_Gray"
                        android:textSize="@dimen/activity_extralarge_textSize" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edt_login_buttons"
                android:gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_extralarge_textSize" />
            <!--
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/view" />-->


        </LinearLayout>


    </ScrollView>

</LinearLayout>